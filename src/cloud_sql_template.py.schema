info:
  title: Cloud SQL template
  description: Creates the cloud sql instance, database and users

imports:
  - path: instance/instance_template.py
    name: instance_template.py

  - path: database/database_template.py
    name: database_template.py

required:
  - rootPassword

properties:
  environment:
    type: string
    default: "dev"
    enum:
      - "dev"
      - "stg"
      - "prod"

  rootPassword:
    type: string
    minLength: 12
